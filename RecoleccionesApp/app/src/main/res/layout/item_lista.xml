<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  android:layout_height="wrap_content"
    android:clickable="true" android:background="?attr/selectableItemBackground"
    android:orientation="vertical" android:layout_marginLeft="15dp">
    <TextView
        android:text="Nombre empresa"
        android:padding="3dp"
        android:id="@+id/Empresatx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Tipo de residuo"
        android:padding="3dp"
        android:id="@+id/Residuotx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="xxxx-xx-xx"
        android:padding="3dp"
        android:id="@+id/Fechatx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"/>

</LinearLayout>